{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ES6",
		"moduleResolution": "node",
		"outDir": "./built/",
		"rootDir": "./src/",
		"strict": true,
		"strictPropertyInitialization": false,
		"typeRoots": [
				"node_modules/@types",
				"src/@types"
		],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
 }
